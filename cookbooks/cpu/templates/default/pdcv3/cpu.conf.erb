[GLOBAL]
DEFAULT_METHOD  = ldap
#CRACKLIB_DICTIONARY = /var/cache/cracklib/cracklib_dict

[LDAP]
LDAP_URI                = ldaps://<%= node['ldap']['host'] %>:636
BIND_DN                 = cn=admin,<%= node['ldap']['dc'] %>
BIND_PASS               = <%= node['ldap']['passwd'] %>
USER_BASE               = ou=people,<%= node['ldap']['dc'] %>
GROUP_BASE              = ou=group,<%= node['ldap']['dc'] %>
USER_OBJECT_CLASS   = account,posixAccount,shadowAccount,top
GROUP_OBJECT_CLASS  = posixGroup,top
USER_FILTER = (objectClass=posixAccount)
GROUP_FILTER    = (objectClass=posixGroup)
USER_CN_STRING  = uid
GROUP_CN_STRING = cn
SKEL_DIR    = /etc/skel
DEFAULT_SHELL   = /bin/bash
HOME_DIRECTORY  = /home
MAX_UIDNUMBER = <%= node['ldap']['max_uid'] %>
MIN_UIDNUMBER = <%= node['ldap']['min_uid'] %>
MAX_GIDNUMBER = <%= node['ldap']['max_gid'] %>
MIN_GIDNUMBER = <%= node['ldap']['min_gid'] %>
ID_MAX_PASSES = 1000
# Whether each user should have its own group created or not
USERGROUPS = yes
# If you change usergroup set this to the default group a user should have
#USERS_GID = 100
RANDOM = "false"
PASSWORD_FILE = "/etc/passfile"
SHADOW_FILE = "/etc/shadowfile"
HASH = "md5"
SHADOWLASTCHANGE    = 11192
SHADOWMAX       = 99999
SHADOWWARING        = 7
SHADOWEXPIRE        = -1
SHADOWFLAG      = 134538308
SHADOWMIN       = -1
SHADOWINACTIVE      = -1

