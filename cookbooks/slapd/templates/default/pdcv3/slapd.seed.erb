slapd slapd/internal/adminpw password <%= node['ldap']["passwd"] %>
slapd slapd/password1 password <%= node['ldap']["passwd"] %>
slapd slapd/internal/generated_adminpw password <%= node['ldap']["passwd"] %>
slapd slapd/password2 password <%= node['ldap']["passwd"] %>
slapd slapd/root_password password <%= node['ldap']["passwd"] %>
slapd slapd/root_password_again password <%= node['ldap']["passwd"] %>
slapd slapd/allow_ldap_v2 boolean false
slapd slapd/password_mismatch note
slapd slapd/invalid_config boolean true
slapd shared/organization string <%= node['cloud']["fqdn"] %>
slapd slapd/no_configuration boolean false
slapd slapd/move_old_database boolean true
slapd slapd/dump_database_destdir string /var/backups/slapd-VERSION
# Do you want the database to be removed when slapd is purged?
slapd slapd/purge_database boolean false
slapd slapd/domain string <%= node['cloud']["fqdn"] %>
slapd slapd/backend select HDB
slapd slapd/dump_database select when needed
