service tftp
{
        socket_type     = dgram
        protocol        = udp
        wait            = yes
        user            = root
        server          = /usr/sbin/in.tftpd
        server_args     = <%= node['tftp']['options'] %> <%= node['tftp']['directory'] %>
        disable         = no
        per_source      = 11
        cps             = 100 2
}
